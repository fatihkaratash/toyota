REDIS_HOST=redis
REDIS_PORT=6379

KAFKA_HOST=kafka
KAFKA_PORT=9092

POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=toyota_rates
POSTGRES_USER=postgres
POSTGRES_PASSWORD=pgadmin

OPENSEARCH_HOST=opensearch
OPENSEARCH_PORT=9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin

# Provider Authentication Configuration
REST_PROVIDER_USER=rest_kullanici_adi
REST_PROVIDER_PASSWORD=rest_sifre
TCP_PROVIDER_USER=tcp_kullanici_adi
TCP_PROVIDER_PASSWORD=tcp_sifre

# Authentication & Connection Timeouts (reduced for faster failure detection)
AUTH_TIMEOUT_SECONDS=5
CONNECTION_TIMEOUT_SECONDS=3
READ_TIMEOUT_SECONDS=8

# Provider Intervals (properly staggered sequence)
TCP_PROVIDER_INTERVAL_MS=1000
REST_PROVIDER_INTERVAL_MS=1500
AGGREGATOR_POLL_INTERVAL_MS=2000

# Window and Timing Configuration
AGGREGATOR_WINDOW_TIMEOUT_MS=800
AGGREGATOR_MAX_TIME_SKEW_MS=1000

# Retry Configuration (exponential backoff)
MAX_RETRY_ATTEMPTS=3
INITIAL_RETRY_DELAY_MS=100
RETRY_BACKOFF_MULTIPLIER=2.0

# Main Application Client Credentials (maps to provider credentials)
MAINAPP_CLIENT_REST_USER=${REST_PROVIDER_USER}
MAINAPP_CLIENT_REST_PASSWORD=${REST_PROVIDER_PASSWORD}
MAINAPP_CLIENT_TCP_USER=${TCP_PROVIDER_USER}
MAINAPP_CLIENT_TCP_PASSWORD=${TCP_PROVIDER_PASSWORD}

# Main Application Environment Variables for Provider Configuration
CLIENT_REST_USERNAME=${MAINAPP_CLIENT_REST_USER}
CLIENT_REST_PASSWORD=${MAINAPP_CLIENT_REST_PASSWORD}
CLIENT_TCP_USERNAME=${MAINAPP_CLIENT_TCP_USER}
CLIENT_TCP_PASSWORD=${MAINAPP_CLIENT_TCP_PASSWORD}

# Market Trend Configuration (reduced polling for efficiency)
MARKET_TREND_INITIAL_MODE=NEUTRAL
MARKET_TREND_INITIAL_STRENGTH=0.5
TREND_REDIS_POLL_INTERVAL_SECONDS=5